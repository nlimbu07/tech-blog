<section class='section'>
  <div class='notification is-secondary'>
    <p style='font-size:30px'>Create a New Post</p>
  </div>
  <form class='new-post-form'>
    <div>
      <label class='label' for='post-title'>Title</label>
      <input
        class='input'
        name='post-title'
        type='text'
        id='post-title'
        placeholder='Text input'
      />
    </div>
    <div>
      <label class='label' for='post-text'>Content</label>
      <textarea
        class='textarea'
        name='post-text'
        id='post-text'
        cols='90'
        rows='10'
      ></textarea>
    </div>
    <br />
    <div class='field is-grouped'>
      <div class='control'>
        <button class='button is-primary' type='submit'>Create</button>
      </div>
    </div>
  </form>
</section>

{{#if posts.length}}
  <section class='section'>
    <div class='notification is-secondary'>
      <p style='font-size:30px'>Your Post</p>
    </div>
    <ol>
      {{#each posts as |post|}}
        <li>
          <article class='post'>
            <div class='box'>
              <div class='title'>
                <a href='/dashboard/edit/{{post.id}}' class=''>{{title}}</a>
                <span>Posted by
                  {{user.username}}
                  on
                  {{format_date created_at}}</span>
              </div>
              <div class='postText'>
                <p>{{post_text}}</p>
              </div>
            </div>
          </article>
        </li>
      {{/each}}
    </ol>
  </section>
{{/if}}

<script src='/javascript/add-post.js'></script>