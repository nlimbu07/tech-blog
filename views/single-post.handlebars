{{> post-info post}}

{{#if loggedIn}}
<section class="section">
  <div class='notification is-secondary'>
    <p style='font-size:30px'>Add Comment</p>
  </div>
<form class="comment-form">
  <div>
    <textarea class='textarea' name="comment-body" cols="10" rows="1">{{comment.comment_text}}</textarea>
  </div>
<br>
  <div class="control">
    <button class='button is-primary' type="submit">Add Comment</button>
  </div>
</form>
</section>
{{/if}}

<section class="section">
<div class="box">
{{> comments post.comments}}
</div>
</section>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}s